<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Informazioni Sessione -->
        <TextView
            android:id="@+id/textSessionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sessione: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textScannedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scansioni effettuate: 0"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp" />

        <!-- Progresso Scansione -->
        <TextView
            android:id="@+id/textProgressInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleziona un'area per iniziare"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Postazione Corrente -->
        <TextView
            android:id="@+id/textCurrentSpot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postazione Corrente: 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:gravity="center"
            android:background="#FFF3E0"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleziona Area:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioAreaA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ Area A (50 postazioni)"
                android:textSize="14sp"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radioAreaB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”´ Area B (75 postazioni)"
                android:textSize="14sp"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radioAreaC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¡ Area C (100 postazioni)"
                android:textSize="14sp"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radioAreaD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”µ Area D (60 postazioni)"
                android:textSize="14sp"
                android:padding="8dp" />
        </RadioGroup>

        <!-- Scanner QR -->
        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/barcodeView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            app:zxing_scanner_layout="@layout/custom_barcode_scanner" />

        <!-- Pulsante Principale -->
        <Button
            android:id="@+id/btnStartSequentialScan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Inizia Scansione Sequenziale"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="12dp" />

        <!-- Controlli Sequenziali (visibili solo durante scansione) -->
        <Button
            android:id="@+id/btnMarkEmpty"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="â­• Postazione Vuota"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF9800"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSkipSpot"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="âž¡ï¸ Salta Postazione"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#607D8B"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Inserimento Manuale (visibile solo quando non in modalitÃ  sequenziale) -->
        <Button
            android:id="@+id/btnManualSpotEntry"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="âœï¸ Vai a Postazione Specifica"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#9C27B0"
            android:layout_marginBottom="12dp" />

        <!-- Termina Sessione -->
        <Button
            android:id="@+id/btnEndSession"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ Termina Sessione"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#F44336" />

    </LinearLayout>
</ScrollView>