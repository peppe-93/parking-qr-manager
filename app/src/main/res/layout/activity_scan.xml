<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textSessionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sessione: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textScannedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scansioni effettuate: 0"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleziona Area:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŸ¢ Verde"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioRed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”´ Rosso"
                android:textSize="14sp" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŸ¡ Giallo"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”µ Blu"
                android:textSize="14sp" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero Postazione (1-100):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editSpotNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Es: 1"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/barcodeView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            app:zxing_scanner_layout="@layout/custom_barcode_scanner" />

        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Scansiona QR Code"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnMarkEmpty"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Segna Postazione Vuota"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnEndSession"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Termina Sessione"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#F44336" />

    </LinearLayout>
</ScrollView>
